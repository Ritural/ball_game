<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ritural.ballgame.WelcomeScreen"
    android:background="#00FFFF"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_play"
        android:onClick="gameStart"
        android:id="@+id/buttonPlayGame"
        android:background="@android:color/holo_red_light"
        android:layout_above="@+id/textViewMainScore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display highscore here"
        android:id="@+id/textViewMainScore"
        android:background="#00FFFF"
        android:textSize="25dp"
        android:autoText="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:textColor="@android:color/black" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficultyBar"
        android:background="@android:color/holo_red_light"
        android:layout_above="@+id/textViewSlow"
        android:layout_alignRight="@+id/textViewFast"
        android:layout_alignEnd="@+id/textViewFast"
        android:layout_alignLeft="@+id/textViewSlow"
        android:layout_alignStart="@+id/textViewSlow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Difficulty"
        android:id="@+id/textViewDifficulty"
        android:background="#00FFFF"
        android:layout_alignBottom="@+id/difficultyBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Slower"
        android:id="@+id/textViewSlow"
        android:background="#00FFFF"
        android:layout_above="@+id/buttonPlayGame"
        android:layout_alignLeft="@+id/textViewMainScore"
        android:layout_alignStart="@+id/textViewMainScore"
        android:layout_marginBottom="26dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Faster"
        android:id="@+id/textViewFast"
        android:background="#00FFFF"
        android:layout_alignTop="@+id/textViewSlow"
        android:layout_alignRight="@+id/textViewMainScore"
        android:layout_alignEnd="@+id/textViewMainScore"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Insert cool name here!"
        android:id="@+id/textViewTitle"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5"
        android:layout_below="@+id/textViewTitle"
        android:background="@android:color/holo_red_light"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_alignRight="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle"
        android:textSize="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How to play:"
        android:id="@+id/textViewPrompt"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You are trapped in a coloured circle bouncing around a screen. Your only task is to collect balls of your colour. However, every time you bounce you feel a little faster and you change colour! Also the walls seem to be sticky..."
        android:id="@+id/textViewInstructions"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewPrompt"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="23dp" />


</RelativeLayout>
